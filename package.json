{
  "name": "loom",
  "version": "0.1.0",
  "description": "AI runtime control plane - provider-agnostic OpenAI-compatible proxy",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "migrate": "node-pg-migrate",
    "migrate:up": "node-pg-migrate up",
    "migrate:down": "node-pg-migrate down",
    "migrate:create": "node-pg-migrate create",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:smoke": "vitest run --config vitest.smoke.config.ts",
    "seed": "tsx scripts/seed.ts",
    "smoke:cleanup": "tsx scripts/cleanup-smoke-data.ts",
    "build:portal": "cd portal && npm run build",
    "build:all": "npm run build:portal && cd dashboard && npm run build"
  },
  "keywords": [
    "ai",
    "proxy",
    "openai",
    "audit",
    "observability"
  ],
  "author": "Michael Brown",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.19.11",
    "@types/pg": "^8.16.0",
    "@vitest/coverage-v8": "^2.1.8",
    "chromedriver": "^146.0.0",
    "selenium-webdriver": "^4.41.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/jwt": "^10.0.0",
    "@fastify/static": "^9.0.0",
    "dotenv": "^17.3.1",
    "fastify": "^5.7.4",
    "node-pg-migrate": "^8.0.4",
    "pg": "^8.18.0",
    "undici": "^7.22.0"
  },
  "engines": {
    "node": ">=25.2.1"
  },
  "main": "index.js"
}
